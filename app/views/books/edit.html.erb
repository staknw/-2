<!--編集機能-->
<h1>EditEditing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:update] %>
<p id = 'update'>
    <%= flash[:update] %>
</p>
<% end %>
<!--urlがedit_book_pathだとupdateできない、Routing Errorと表示される-->
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>


  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>


  <%= f.submit 'Update Book' %>

  <%= link_to 'Show', book_path(@book) %>
  |
  <%= link_to 'Back', books_path %>
<% end %>
